@page "/"
@using Syncfusion.Blazor
@using Syncfusion.Blazor.Navigations
@using Syncfusion.Blazor.Buttons
<SfButton Content="Add tab" OnClick="AddTab" />
<SfTab @ref="sfTab" LoadOn="ContentLoad.Init" ShowCloseButton="true" AllowDragAndDrop="true" Height="100%" @bind-SelectedItem="currentTabIndex">
    <TabAnimationSettings>
        <TabAnimationNext Effect="AnimationEffect.None" />
        <TabAnimationPrevious Effect="AnimationEffect.None" />
    </TabAnimationSettings>
</SfTab>

@code {
    int currentTabIndex = 0;
    SfTab? sfTab;

    async Task AddTab()
    {
        var tab = new TabItem()
            {
                Content = "Hello",
                Header = new TabHeader() { Text = $"Tab {sfTab.Items.Count + 1}", IconPosition = "left" },
            };

        await sfTab.AddTab(new List<TabItem> { tab }, sfTab.Items.Count);
        // await Task.Delay(500); // I do not want a hardcoded delay
        await sfTab.SelectAsync(sfTab.Items.Count - 1);
    }
}